{
    "openapi": "3.0.0",
    "info": {
        "title": "API Internal Tools Management",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000/api",
            "description": "API de gestion des outils internes"
        }
    ],
    "paths": {
        "/tools": {
            "get": {
                "summary": "Liste paginée des outils disponibles",
                "operationId": "64455391b756ca590b5bb8481a2c4b60",
                "parameters": [
                    {
                        "name": "department",
                        "in": "query",
                        "description": "Département propriétaire",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "status",
                        "in": "query",
                        "description": "Status de l'abonnement à l'outil",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Numéro de la page consultée",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Nombre d'éléments par page",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 5
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Réponse paginée avec la liste des outils",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/PaginatedToolsResponse"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Paramètres invalides"
                    },
                    "404": {
                        "description": "Aucun outil trouvé"
                    }
                }
            }
        },
        "/tools/{id}": {
            "get": {
                "operationId": "712cb94698613e5bc9b0e6c2e60b0757",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID de notre outil",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "default": "1"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Notre outil",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Tool"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Category": {
                "required": [
                    "id",
                    "name"
                ],
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string",
                        "nullable": true
                    },
                    "color_hex": {
                        "type": "string",
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "Tool": {
                "required": [
                    "id",
                    "name",
                    "category_id",
                    "monthly_cost",
                    "active_users_count",
                    "owner_department"
                ],
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string",
                        "nullable": true
                    },
                    "vendor": {
                        "type": "string",
                        "nullable": true
                    },
                    "website_url": {
                        "type": "string",
                        "nullable": true
                    },
                    "monthly_cost": {
                        "type": "integer"
                    },
                    "active_users_count": {
                        "type": "boolean",
                        "nullable": true
                    },
                    "owner_department": {
                        "type": "string",
                        "nullable": true
                    },
                    "status": {
                        "type": "string"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "User": {
                "required": [
                    "id",
                    "name",
                    "email",
                    "department"
                ],
                "properties": {
                    "id": {
                        "type": "integer"
                    },
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "department": {
                        "type": "string"
                    },
                    "role": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string"
                    },
                    "hire_date": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "PaginatedToolsResponse": {
                "properties": {
                    "data": {
                        "description": "Liste d'outils paginée",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Tool"
                        }
                    },
                    "total": {
                        "description": "Nombre total d'éléments disponibles",
                        "type": "integer"
                    },
                    "page": {
                        "description": "Numéro de la page courante",
                        "type": "integer"
                    },
                    "lastPage": {
                        "description": "Numéro de la dernière page",
                        "type": "integer"
                    }
                },
                "type": "object"
            }
        }
    }
}